extends drawlayout
block toolbar
  li.btn-group.dropup#users
      button.btn.dropdown-toggle(data-toggle="dropdown")
        i.icon-user
        span.caret
      ul.dropdown-menu
        li
          h4 Active Users
        li.divider
  li  
     button.btn.tool(type='button', onclick='', value='Upload')
       i.icon-upload
block functions                        
  .pull-right
    a.brand(href="#") #{box.name}
    nav#functions.nav.btn-group
      button.tool.btn(type='button', onclick='', value='Export')
        i.icon-download-alt
      a.quit.btn.pull-right(href='/join')
        i.icon-off
block upmodal
  #pptUpload.modal.hide.fade
    .modal-header
      h3 Upload Presentation
    .modal-body 
      #fine-uploader  
    .modal-footer
      a.btn(onclick='javascript:pptUploadClose();') Close
      a
