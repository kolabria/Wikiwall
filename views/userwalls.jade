.container
  .page-header
    h1 User:  #{user.name}
  .row-fluid
      br
      h3 WikiWalls:
      br
      table.table
        thead
          tr
            th.hints(data-toggle='tooltip', title='List of walls you have crated')  WikiWall Name
            th.hints(data-toggle='tooltip', title='Use this link to share your wikiwall with others') Share Link
            th.hints(data-toggle='tooltip', title='Checked if wall shared with other registed user')  Shared
            th.hints(data-toggle='tooltip', title='Checked if wall is published to a meeting room')  Published
            th.hints(data-toggle='tooltip', title='Go have a whiteboard meeting')  Draw
            th.hints(data-toggle='tooltip', title='Click to share with registered user and publish wall to a meeting room') Properties
            th.hints(data-toggle='tooltip', title=' Permanently delete wall')  Remove
        tbody
          each wall in walls
            tr 
              td #{wall.name}
              td #{hostname}/suw/#{wall.shareURL}
              td 
                if (wall.userSharedWith[0])
                  i.icon-ok
              td 
                if (wall.publishedTo[0])
                  i.icon-ok
              td
                a.btn(href='/user/#{wall.defaultWall_ID}/draw') open
              td
                a.btn(href='/userwalls/#{wall.defaultWall_ID}/edit') edit
              td
                form(method="post", action='/userwalls/#{wall.defaultWall_ID}/')
                  input(type="hidden", name="_method", value="delete")
                  input.btn(type="submit", value='remove')
          br 
          tr
            form.form-horizontal(action='/userwalls', method='POST')
              td
                input#id_wall_name(type='text', name='wall_name',placeholder='name of new wall')
              td
                input.btn.btn-primary(type='submit', value='New')
              td
      h3 Shared WikiWalls
      table.table
        thead
          tr
            th.hints(data-toggle='tooltip', title='List of walls shared with you by other registered users')  WikiWall Name
            th.hints(data-toggle='tooltip', title='Go have a whiteboard meeting') Draw
        tbody
          each swall in user.SharedWithMe
            tr 
              td #{swall.wallName}
              td
                a.btn(href='/user/#{swall.wallID}/draw') Open
     