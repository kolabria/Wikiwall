  header.container
    ul.nav.nav-tabs.language.pull-right
      li.dropdown
        a.dropdown-toggle(href='#', data-toggle='dropdown')
          i.icon-globe
          | Change Language
          b.caret
        ul.dropdown-menu.pull-right
          li
            a(href='#')
              i.flag.flag-ca
              | English
          li
            a(href='#')
              i.flag.flag-fr
              | French
      li.dropdown
        a.dropdown-toggle(href='#', data-toggle='dropdown')
          i.icon-user
          | Join Meeting
          b.caret
        #signin-dropdown.dropdown-menu.pull-right
          form.form-vertical(action='/join', method='post')
            div(style='display: none;')
              input(type='hidden', name='csrfmiddlewaretoken', value='e49fb64f716e93e7bd6ba16774c14a28')
            label(for='id_name') Name
            input#id_name.span3(name='name', maxlength='30', placeholder='Your Name', type='text')
            label(for='id_room') Room
            input#id_room.span3(name='room', maxlength='30', placeholder='Case Insensitive', type='text')
            label(for='id_code') Room Code
            input#id_code.span3(name='code', maxlength='30', placeholder='4-digit secret code', type='text')
            input.btn.btn-primary.center(type='submit', value='Join')
      li.dropdown
        a.dropdown-toggle(href='#', data-toggle='dropdown')
          i.icon-user
          | Login
          b.caret
        #signin-dropdown.dropdown-menu.pull-right
          form.form-vertical(action='/login', method='post')
            div(style='display: none;')
              input(type='hidden', name='csrfmiddlewaretoken', value='')
            label(for='id_name') Email
            input#id_name.span3(name='company[adminEmail]', maxlength='30', value=company.adminEmail || '', type='text')
            label(for='id_room') Password
            input#id_room.span3(name='company[password]',value=company.password || '', maxlength='30', type='password')
            input.btn.btn-primary.center(type='submit', value='Login')
            br
            a.pull-right(href='/register') Create a new account
    .navbar
      a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      hgroup.brand.pull-left
        h1.logo Kolabria
        h2 Sharing Visual Ideas
      .nav-collapse
        nav.mainnav.nav.btn-group.pull-right
          a.btn.btn-large(href='/') Home
          a.btn.btn-large(href='#') Product
          a.btn.btn-large(href='#') About
          a.btn.btn-large(href='#') Blog
          a.btn.btn-large(href='#') Contact
  .container
    .row-fluid
        h1 WikiWall - Details
          br
          h2 Device Info
          br
          table.table
            thead
              tr
                th Device ID
                th Room Name
                th Update Room Name
                th
            tbody
              tr
                form.form-horizontal(action='/controllers/#{box.id}/edit', method='post')
                  td #{box.id}
                  td #{box.name}
                  td
                    input#id_box_name(type='text', name='box_name', value='#{box.name}')
                  td
                    input.btn.btn-primary.btn-small(type='submit', value='Update')
    .row-fluid
        h2 Devices on Quick Share List
        table.table
          thead
            tr
              th Box ID
              th Room Name
              th
          tbody
            each sb in shareList
              tr
                td #{sb}
                td 
                td
                  a.btn(href='/controllers/#{box.id}/unshare/#{sb}/') Remove
            tr
              form.form-horizontal(action='/controllers/#{box.id}/share', method='post')
                td(colspan='2')
                  input#id_data(type='text', placeholder='BoxID or Box Name', name='data')
                td
                  input.btn.btn-primary.btn-small(type='submit', value='Add')
        a.btn(href='/controllers/') Back
        br
