  body.background
    #videoconf
    #ssarea
    .canvas
      header.navbar.navbar-fixed-bottom 
        nav#toolbar.toolbar
            ul.nav.pull-left
              li.btn-group.dropup.pen
                button.btn.tool(type='button', onclick='', value='Pen')
                  i.icon-pencil   
                button.btn.dropdown-toggle(data-toggle="dropdown")       
                  span.caret
                ul.dropdown-menu.pull-right
                  li
                    button.btn.btn-inverse.color(type='button', onclick='', value='Black')
                  li
                    button.btn.btn-danger.color(type='button', onclick='', value='Red')
                  li 
                    button.btn.btn-success.color(type='button', onclick='', value='Green')
                  li
                    button.btn.btn-primary.color(type='button', onclick='', value='Blue')
              li  
                button.btn.tool(type='button', onclick='', value='Nav')
                  i.icon-move
              li  
                button.btn.tool(type='button', onclick='', value='Select')
                  i.icon-hand-up
              //- li  
                //- button.btn.tool(type='button', onclick='', value='Show')
                  //- i.icon-play-circle 
              li.btn-group.dropup#vconf
                button.btn.dropdown-toggle(data-toggle="dropdown")
                  i.icon-facetime-video
                  span.caret
                ul.dropdown-menu
                  li.btn(data-value='vcFull')
                    h4 Full Screen
                  li.btn(data-value='vcSplit')
                    h4 Split Screen
                  li.btn(data-value='vcHangup')
                    h4 Hangup
                  li.btn(data-value='vcCall')
                    h4 Call                          
              block toolbar
          block functions
      .whiteboard!= body
      #navWindow
        #view
        .btn-group                  
          button.btn.tool(type='button', onclick='', value='ZoomIn')
            i.icon-plus
          button.btn.tool(type='button', onclick='', value='Center')
            i.icon-asterisk
          button.btn.tool(type='button', onclick='', value='ZoomOut')
            i.icon-minus
      #alerts
    #ssdisplay.modal.hide.fade
      .modal-body
        section
          h3 Share Your Screen
          button#init-RTCMultiConnection(title='Only first person should click this button in the entire media session.') Open Session
        table(style='width: 100%; border-left: 1px solid black;')
        tbody
          tr
            td
              h3(style='display: block; text-align: center;') Screen Sharing using WebRTC
              section#local-media-stream(style='width: 34em;')
    #pptLoad.modal.hide.fade
      .modal-body
         h3  Loading Presentation
    #pptList.modal.hide.fade
      .modal-header
        h3 Presentation Viewer
      .modal-body
        table.table
          tbody#presList
      .modal-footer
        a.btn(onclick='javascript:pptListClose();') Close
        a
    block upmodal
    #pptShow.modal.hide.fade
      .modal-header
        h3 
      .modal-body
        #embedded_doc         
      .modal-footer
        a.btn.btn-primary( onclick='javascript:viewerBegin();') Slide 1
        a.btn.btn-primary( onclick='javascript:viewerPrev();') Prev
        a.btn.btn-primary( onclick='javascript:viewerNext();') Next
        a.btn(onclick='javascript:viewerClose();')
          | Close
